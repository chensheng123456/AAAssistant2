<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
     >

    <RelativeLayout
        android:id="@+id/rl_main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#999999"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_bottomLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_bottomLeft"
            android:text="@string/activity_main_bottom"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_main_bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_slipeMenu_main_buttom"
            style="@style/StyleListView">
        </ListView>
    </LinearLayout>

</RelativeLayout>